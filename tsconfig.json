{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "es6",
    "target": "ES2018",
    "allowJs": false,
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "strict": true
  }
}
