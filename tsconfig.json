{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "es6",
    "target": "ES2018",
    "allowJs": false,
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public"
  ]
}
